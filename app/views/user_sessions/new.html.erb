<div class="container">

	<div class="row vertical-center-row">
		<h1> <%= t 'layouts.login'%> </h1>
	</div>
</div>

<%if @user_session.errors.any? %>
	<div id="error_explanation">
			<% @user_session.errors.full_messages.each do |message|%>
				<%=message%>
			<%end%>
	</div>
<% end %>
	
<div class="container">
   <div class="row vertical-center-row">
		<%=form_for @user_session do |f| %>
			<p>
				<%= f.label :email%><br/>
				<%= f.text_field :email %>
			</p>
			<p>
				<%= f.label :password%><br/>
				<%= f.password_field :password %>
			</p>
			<p>
				<%= f.submit t('layouts.login')%>
			</p>
	</div>
</div>

<% end %>